@inherits StarvationOutcomeBase

@if (StarvationOutcomes is not null)
{
    <MudPaper Class="pa-4 mb-3">
        <MudText Typo="Typo.h5" GutterBottom>
            Starvation Outcomes
        </MudText>
        @if(StarvationOutcomes.Any(x => x.ExhaustionGained > 0))
        {
            foreach (var outcome in StarvationOutcomes)
            {
                if (outcome.ExhaustionGained > 0)
                {
                    <MudAlert Severity="Severity.Warning" ContentAlignment="HorizontalAlignment.Center" Class="mb-2">
                        @outcome.CharacterName is starving and gains @outcome.ExhaustionGained exhaustion!
                    </MudAlert>
                }
            }
        }
        else
        {
            <MudAlert Severity="Severity.Success" ContentAlignment="HorizontalAlignment.Center" Class="mb-2">
                No party members are starving.
            </MudAlert>
        }
    </MudPaper>
}